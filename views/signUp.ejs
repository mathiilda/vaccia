<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vaccia</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="../style/beforeIndex.css">
    <link rel="icon" href="/img/logo2.jpg">
</head>
<body class="index-sign">
    <div class="container">
        <% if (error) { %>
            <% if (error == "email") {%>
            <div class="error">
                <p>The email is already in use by another family. Try another one.</p>
            </div>
            <% } else { %>
                <div class="error">
                    <p>"Confirm password" doesn't match original password. Try again.</p>
                </div>
            <% } %>
        <% } %>

        <h1>Sign up to Vaccia</h1>
        <div class="box">
            <form action="/signUp" method="POST">
                <h3>Full name:</h3>
                <input type="text" name="name" required><br>
                <h3>Your birthday:</h3>
                <input type="date" name="date" required><br>
                <h3>Your email:</h3>
                <input type="email" name="email" required><br>
                <h3>Your password:</h3>
                <input type="password" minlength="6" maxlength="30" name="pass" required><br><br>
                <h3>Confirm password:</h3>
                <input type="password" minlength="6" maxlength="30" name="passConf" required><br><br>
                <input type="submit" value="Sign up">
            </form>
        </div>
    </div>
</body>
</html>